<% provide(:title, @user.name) %>

<div>
  <h1>User Profile</h1>
  <p id="notice"><%= notice %></p>
</div>

<div>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
    </aside>
  </div>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
